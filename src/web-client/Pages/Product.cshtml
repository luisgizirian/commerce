@page
@using WebClient.Services
@model ProductModel
@{
    ViewData["Title"] = "Product";
    CatalogItem product = (CatalogItem)ViewData["Product"];
}

<form>
    <div class="mb-3 row">
        <label for="Id" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="Id" value="@product.Id">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="SKU" class="col-sm-2 col-form-label">SKU</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" id="SKU" value="@product.Sku">
        </div>
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Product Name" value="@product.Name">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Details</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" value="@product.Description"></textarea>
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" readonly class="form-check-input" id="isUnavailable" checked="@product.IsUnavailable">
        <label class="form-check-label" for="isUnavailable">Not available?</label>
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="isEnabled" checked="@product.IsEnabled">
        <label class="form-check-label" for="isEnabled">Enabled?</label>
    </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>